            <TableColumn fx:id="CustLastUpdate" prefWidth="75.0" text="Last Update" />
            <TableColumn fx:id="CustLastUpdatedBy" prefWidth="75.0" text="Last Updated By" />
            <TableColumn fx:id="CustDivision" prefWidth="75.0" text="Division" />
